<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8c9eff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- region { CashButton Header } -->
    <com.avatye.app.sample.kotlin_cashbutton_sample.HeaderView
        android:id="@+id/component_header_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:text="Kotlin" />
    <!-- endregion -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_line_color" />


    <ImageView
        android:id="@+id/image_haru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/image_haru" />


    <TextView
        android:id="@+id/text_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_haru"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="@string/cashbutton_sample_app_koltin"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/avtcb_clr_pale_blue" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- region { 캐시버튼 문의 } -->
            <LinearLayout
                android:id="@+id/ly_inquire_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:paddingEnd="24dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_inquire"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/avatye_ic_cashbutton_blue" />

                    <TextView
                        android:id="@+id/tv_inquire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/cashbutton_inquire"
                        android:textColor="#FFF"
                        android:textSize="18dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_inquire_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/cashbutton_inquire_contents"
                    android:textColor="#B6BAF6"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!-- endregion  -->


        </LinearLayout>
    </ScrollView>


</LinearLayout>
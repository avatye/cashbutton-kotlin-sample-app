<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:gravity="center"
    android:orientation="vertical">

    <com.avatye.cashblock.unit.linenews.view.LineNewsView
        android:id="@+id/lineNewsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        app:lineNewsViewRadius="15"
        app:lineNewsViewShowDivider="true"
        app:lineNewsViewUseBanner="true"
        app:lineNewsViewCheckStrategy="all"
        app:lineNewsViewBackgroundColor="#FFF"
        app:lineNewsViewBannerBackgroundColor="#FFF"
        app:lineNewsViewDividerColor="#979797"
        app:lineNewsViewNewsClickTextColor="#0091EA"
        app:lineNewsViewNewsTextColor="@color/black"
        app:lineNewsViewNewsTextSize="12" />

    <TextView
        android:id="@+id/lineNewsViewLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Loader"
        android:textColor="#212121"
        android:textSize="14dp"
        tools:text="LOG" />

    <Button
        android:id="@+id/button_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="LOAD" />

</LinearLayout>